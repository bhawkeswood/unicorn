<!DOCTYPE html>
<html>
<head>
  <title>Unicorn</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="user_nav">
      <% if current_user %>
        Logged in as <%= current_user.username %>.
        <div class="button"><%= link_to "Log out", logout_path %></div>
        <div class="button"><%= link_to "Home", user_path(current_user.id) %></div>
        <div class="button"><%= link_to "Add a Team", new_team_path %></div>
        <div class="button"><%= link_to "Teams", teams_path %></div>
        <div class="button"><%= link_to "Myplaneteers", users_path %></div>

      <% else %>
        <div class="button"><%= link_to "Sign up", signup_path %></div> | 
        <div class="button"><%= link_to "Log in", login_path %></div> | 
        <div class="button"><%= link_to 'Login with Google', auth_at_provider_path(:provider => :google) %></div>
      <% end %>
    </div>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>
    <%= yield %>
  </div>

</body>
</html>
