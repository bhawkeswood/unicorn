<%= form_tag sessions_path do %>
  <div class="fields">
    <%= label_tag :username %>
    <%= text_field_tag :username, params[:username] %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password, params %>
  </div>
  <div class="actions">
    <%= submit_tag "Let's go!" %>
  </div>
<% end %>